<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cryptolize" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/primaryColor</item>
    </style>

    <style name="Theme.Cryptolize.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cryptolize.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Cryptolize.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //splash

    <style name="Theme.splash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/primaryColor</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_crypto_logo_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.Cryptolize.NoActionBar</item>

        # Required.
    </style>

</resources>